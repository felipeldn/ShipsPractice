{% extends 'layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>OO Battleships of Space</h1>
        </div>
        <table class="table table-hover">
            <caption><i class="fa fa-rocket"></i> These ships are ready for their next Mission</caption>
            <thead>
            <tr>
                <th>Ship</th>
                <th>Weapon Power</th>
                <th>Jedi Factor</th>
                <th>Strength</th>
                <th>Status</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody>
                {% for ship in ships.ships %}
            <tr>
                <td>{{ ship.name }} </td>
                <td>{{ ship.weaponPower }} </td>
                <td>{{ ship.jediFactor }} </td>
                <td>{{ ship.strength }} </td>
                <td>
                    {%  if ship.isFunctional() %}
                        <i class="fa fa-sun-o"></i>
                    {% else %}
                        <i class="fa fa-cloud"></i>
                    {% endif %}
                </td>
                <td> {{ ship.team }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
            <br/>
        <div class="battle-box center-block border">
            <div>
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
